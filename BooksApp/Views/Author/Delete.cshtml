@model Author

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark text-center">Delete Author</h2>
            <hr />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="FirstName" class="p-0"></label>
            <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="LastName" class="p-0"></label>
            <input asp-for="LastName" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Age" class="p-0"></label>
            <input asp-for="Age" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="PublishedBook" class="p-0"></label>
            <input asp-for="PublishedBook" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="City" class="p-0"></label>
            <input asp-for="City" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="BookId" class="p-0"></label>
            <input disabled asp-for="BookId" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Author" asp-action="Index" class="btn btn-outline-info form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
