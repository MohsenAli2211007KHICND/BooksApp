@model Book

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark text-center">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="BookTitle" class="p-0"></label>
            <input asp-for="BookTitle" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="RealeseYear" class="p-0"></label>
            <input asp-for="RealeseYear" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Pages" class="p-0"></label>
            <input asp-for="Pages" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete book</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-info form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

